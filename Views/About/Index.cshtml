@model AboutViewModel
@{
    ViewData["Title"] = "About";
}

<div class="row about-page">
    <div class="col-md-10 offset-md-1">
        <div class="about-header">
            <h2 class="about-title">
                <i class="bi bi-info-circle"></i>
                About URL Shortener
            </h2>
            <p class="about-subtitle">
                A short description of how my URL Shortener works under the hood.
            </p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model.IsAdmin)
        {
            <form asp-action="UpdateContent" method="post" class="mb-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Content" class="form-label">Content (HTML allowed)</label>
                    <textarea asp-for="Content" class="form-control" rows="20" required></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update Content</button>
            </form>
            <hr />
        }

        <div class="about-content">
            @Html.Raw(Model.Content)
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const alert = document.querySelector('.alert.alert-success');
            if (alert) {
                setTimeout(() => {
                    const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                    bsAlert.close();
                }, 3000);
            }
        });
    </script>
}

