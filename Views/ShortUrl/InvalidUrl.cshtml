@{
    ViewData["Title"] = "Invalid URL";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <i class="bi bi-exclamation-triangle"></i> Invalid URL Error
                </h4>
                <p>@ViewBag.ErrorMessage</p>
                <hr>
                <p class="mb-0">
                    <strong>Short Code:</strong> @ViewBag.ShortCode<br>
                    <strong>URL ID:</strong> @ViewBag.UrlId
                </p>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">What to do?</h5>
                    <p class="card-text">
                        This shortened URL contains invalid characters (such as Cyrillic letters or special characters) 
                        that cannot be used in HTTP redirects. You need to delete this URL and create a new one with a valid URL.
                    </p>
                    
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="mt-3">
                            <a href="/ShortUrl/Index" class="btn btn-primary">
                                <i class="bi bi-arrow-left"></i> Back to URL List
                            </a>
                            @if (ViewBag.UrlId != null)
                            {
                                <button onclick="deleteInvalidUrl(@ViewBag.UrlId)" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete This URL
                                </button>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="mt-3">
                            <a href="/Account/Login" class="btn btn-primary">Login to Delete</a>
                            <a href="/ShortUrl/Index" class="btn btn-secondary">Back to URL List</a>
                        </div>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">Valid URL Examples:</h6>
                    <ul class="mb-0">
                        <li><code>https://example.com</code></li>
                        <li><code>https://www.google.com/search?q=test</code></li>
                        <li><code>http://example.org/path/to/page</code></li>
                    </ul>
                    <p class="text-muted small mt-2 mb-0">
                        URLs should contain only ASCII characters. Non-ASCII characters should be properly URL-encoded.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function deleteInvalidUrl(id) {
            if (!confirm('Are you sure you want to delete this invalid URL?')) {
                return;
            }

            try {
                const response = await fetch(`/ShortUrl/Delete?id=${id}`, {
                    method: 'DELETE',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                });

                const data = await response.json();

                if (data.success) {
                    alert('URL deleted successfully. You can now create a new one with a valid URL.');
                    window.location.href = '/ShortUrl/Index';
                } else {
                    alert(data.message || 'Error deleting URL');
                }
            } catch (error) {
                alert('Error deleting URL. Please try again.');
                console.error('Error:', error);
            }
        }
    </script>
}

